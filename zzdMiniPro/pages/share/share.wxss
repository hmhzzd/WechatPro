#item1 {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    flex-wrap: wrap;
    /* 让文字撑开盒子 */
    min-height: 232rpx;
    width: 700rpx;
    margin: 10rpx 25rpx;
    background-color: #f5f5f5f5;
    position: relative;
    border-radius: 24rpx;
}
#imgBox_0 {
    align-self: center;
    width: 80rpx;
    height: 80rpx;
    border-radius: 180rpx;
}
#user {
    width: 80rpx;
    height: 80rpx;
    border-radius: 180rpx;
}
.msg {
    width: 570rpx;
    /* 让文字撑开盒子 */
    min-height: 180rpx;
    margin: 46rpx 0;
    background-color: #ffff;
    padding-left: 20rpx;
    padding-top: 20rpx;
    border-radius: 24rpx;
    /* 文字换行 */
    white-space: normal;
    word-break: break-all;
    overflow: auto;
    font-family:"lucida grande", "lucida sans unicode", lucida, helvetica, "Hiragino Sans GB", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
}
#imgBox_1 {
    position: absolute;
    right: 30rpx;
    bottom: 4rpx;
    width: 40rpx;
    height: 36rpx;
    padding: 0;
    border: none;
}
#good {
    width: 40rpx;
    height: 36rpx;
}
/* 发布经验 */
#addInput {
    position: sticky;
    bottom: 0rpx;
    width: 750rpx;
    height: 130rpx;
    background-color:#ffff;
}
#addInput button {
    position: absolute;
    top: 20rpx;
    width: 650rpx;
    background-color:#ecf0f1;
    margin: 0 50rpx;
    border-radius: 36rpx;
    padding-left: 20rpx;
}
