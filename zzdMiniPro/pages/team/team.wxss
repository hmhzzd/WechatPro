page {
    height: auto;
    font-family: "lucida grande", "lucida sans unicode", lucida, helvetica, "Hiragino Sans GB", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
    background-color: #c2e1fe;
}

#item1 {
    /* 让文字撑开盒子 */
    /* height: 232rpx; */
    width: 700rpx;
    margin: 20rpx 25rpx;
    background-color: #ffffff;
    border-radius: 24rpx;
    box-shadow: 0px 10px 30px rgb(0 0 0 / 15%);
}

.touxiang {
    width: 120rpx;
    height: 150rpx;
    margin-left: 40rpx;
    border-radius: 180rpx;
    background-color: #ffffff;
    display: flex;
    flex-direction: column;
    align-content: center;
    justify-content: center;
}

#user {
    width: 100rpx;
    height: 100rpx;
    border-radius: 180rpx;
}

#userName {
    width: 100rpx;
    height: 30rpx;
    font-size: 24rpx;
    text-align: center;
    line-height: 30rpx;
    margin-top: 10rpx;
}

.msg {
    display: flex;
    flex-direction: column;
    align-content: flex-start;
    justify-content: start;
    margin-left: 20rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    width: 540rpx;
    /* 让文字撑开盒子 */
    /* height: 180rpx; */
    padding-left: 20rpx;
    padding-top: 10rpx;
    font-size: 30rpx;
    /* 文字换行 */
    white-space: normal;
    word-break: break-all;
    overflow: scroll;
}

#matchName {
    font-weight: 700;
}

#needDetails {
    font-weight: 400;
}

#tel {
    font-weight: 700;
    display: flex;
    justify-content: flex-start;
}

#telDetail {
    font-weight: 700;
}

/* 创建时间的放置 */
#data {
    align-self: flex-end;
    margin-right: 20rpx;
}

.setting {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.teamInfo {
    width: 100%;
    height: auto;
    margin-top: 10rpx;
}

/* 发布悬浮窗 */
#add {
    position: fixed;
    bottom: 40rpx;
    right: 20rpx;
    background-color: #ffffff;
    width: 100rpx;
    height: 100rpx;
    padding: 0;
    border: none;
    border-radius: 180rpx;
}

#add image {
    width: 100rpx;
    height: 100rpx;
}

/* 选择框 */
#select {
    background-color: #f5f5f5;
    width: 100%;
    height: 80rpx;
    position: relative;
    top: 0;
}

.picker {
    position: absolute;
    top: 10rpx;
    right: 30rpx;
    width: 400rpx;
    height: 60rpx;
    background-color: #ffffff;
    border-radius: 48rpx;
    font-size: 24rpx;
    line-height: 60rpx;
}

#img {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    right: 30rpx;
    top: 16rpx;
}

#select_item {
    z-index: 999;
    position: absolute;
    top: 10rpx;
    left: 40rpx;
    width: 100px;
    height: 60rpx;
    background-color: #ffffff;
    border-radius: 48rpx;
    text-align: center;
    font-size: 24rpx;
    line-height: 60rpx;
}

/* 当页面无内容时的显示 */
.container2 {
    margin-top: 8rpx;
    height: 920rpx;
    width: 720rpx;
    margin-left: 15rpx;
    margin-right: 15rpx;
    background-color: #ffffff;
    position: relative;
    top: 24rpx;
    border-radius: 48rpx;
}

#imgs {
    width: 400rpx;
    height: 400rpx;
    background-image: url(https://s3.bmp.ovh/imgs/2022/03/31/f2008f1f515d87f3.png);
    background-position: center;
    background-repeat: no-repeat;
    position: absolute;
    top: 24rpx;
    right: 160rpx;
}

text {
    position: absolute;
    top: 460rpx;
    right: 230rpx;
    color: gray;
    font-style: italic;
    font-size: 24rpx;
    font-family: "lucida grande", "lucida sans unicode", lucida, helvetica, "Hiragino Sans GB", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
}

#toNew {
    position: absolute;
    top: 520rpx;
    right: 240rpx;
    width: 240rpx;
    height: 40rpx;
    font-size: 24rpx;
    font-family: "lucida grande", "lucida sans unicode", lucida, helvetica, "Hiragino Sans GB", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
    color: rgb(54, 195, 250);
}