page {
    height: auto;
    font-family:"lucida grande", "lucida sans unicode", lucida, helvetica, "Hiragino Sans GB", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
    background-color: #c2e1fe;
  }
  #item1 {
    /* 让文字撑开盒子 */
    width:  700rpx;
    margin: 20rpx 25rpx;
    background-color: #ffffff;
    border-radius: 24rpx;
    box-shadow: 0px 10px 30px rgb(0 0 0 / 15%);
  }
  #item2 {
    height: 232rpx;
    width:  730rpx;
    margin-left: 10rpx;
    margin-right: 10rpx;
    margin-bottom: 4rpx;
    border-radius: 24rpx;
    background-color: #f5f5f5;
  }
  .touxiang {
    width: 120rpx;
    height: 150rpx;
    margin-left: 40rpx;
    border-radius: 180rpx;
    background-color: #ffffff;
    display: flex;
    flex-direction: column;
    align-content: center;
    justify-content: center;
  }
  #user {
    width: 100rpx;
    height: 100rpx;
    border-radius: 180rpx;
  }
  #userName {
      width: 100rpx;
      height: 30rpx;
      font-size: 24rpx;
      text-align: center;
      line-height: 30rpx;
      margin-top: 10rpx;
  }
  .msg {
    display: flex;
    flex-direction: column;
    align-content: flex-start;
    justify-content: start;
    margin-left: 20rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    width: 540rpx;
    /* 让文字撑开盒子 */
    padding-left: 20rpx;
    padding-top: 10rpx;
    font-size: 30rpx;
    /* 文字换行 */
    white-space: normal;
    word-break: break-all;
    overflow: scroll;
  }
  #matchName {
      font-weight: 700;
  }
  #needDetails {
      font-weight: 400;
  }
  #tel {
      font-weight: 700;
      display: flex;
      justify-content: flex-start;
  }
  #telDetail {
      font-weight: 700;
  }
  /* 创建时间的放置 */
  #data {
      align-self: flex-end;
      margin-right: 20rpx;
  }
  
  .setting {
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  .teamInfo {
    width: 100%;
    height: auto;
    margin-top: 10rpx;
  }
  /* 当页面无内容时的显示 */
.container2{
    margin-top: 8rpx;
    height: 920rpx;
    width: 720rpx;
    margin-left: 15rpx;
    margin-right: 15rpx;
    background-color:#ffffff;
    position: relative;
    top: 24rpx;
    border-radius: 48rpx;
  }
